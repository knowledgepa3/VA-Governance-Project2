# ACE Governance Platform Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC API (Required for AI-powered analysis)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# =============================================================================
# DEMO MODE (Set to 'true' for client demos without API calls)
# =============================================================================
ACE_DEMO_MODE=false

# =============================================================================
# STRICT MODE (Enterprise - prevents mock data fallbacks)
# =============================================================================
# When enabled, the system will fail instead of silently falling back to mock
# data when real data sources (SAM.gov, USASpending.gov) are unavailable.
# Recommended: Enable for production deployments to ensure data integrity.
ACE_STRICT_MODE=false

# =============================================================================
# BD WORKFORCE SETTINGS
# =============================================================================
# Maximum parallel browser agents (default: 5, reduce if system is slow)
BD_MAX_PARALLEL_AGENTS=5

# Headless browser mode (true = no visible browser, false = show browsers)
BD_HEADLESS_MODE=false

# =============================================================================
# VA LIGHTHOUSE API (For veteran verification, claims, benefits)
# =============================================================================
# Get your API key at: https://developer.va.gov/
# Sandbox: https://developer.va.gov/explore/api/benefits-claims/sandbox-access
VITE_VA_API_KEY=

# =============================================================================
# SAM.GOV API (Optional - for live RFP data)
# =============================================================================
# Get your API key at: https://sam.gov/content/home
SAM_GOV_API_KEY=

# =============================================================================
# COMPANY PROFILE (For BD win probability calculations)
# =============================================================================
# Years your company has been in business
COMPANY_YEARS_IN_BUSINESS=10

# Does your company have past performance with the target agency?
COMPANY_PAST_PERFORMANCE_WITH_AGENCY=false

# =============================================================================
# LLM PROVIDER (Optional - defaults to Anthropic if API key present)
# =============================================================================
# Options: anthropic, bedrock, azure, mock
# LLM_PROVIDER=anthropic

# AWS Bedrock (for FedRAMP High deployments)
# AWS_BEDROCK_REGION=us-gov-west-1

# Azure OpenAI (alternative FedRAMP path)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.us

# =============================================================================
# AUTHENTICATION (Optional - defaults to mock provider for demos)
# =============================================================================
# Provider: mock, auth0, login_gov, azure_ad, okta
# AUTH_PROVIDER=mock

# Auth0 (Enterprise)
# AUTH0_DOMAIN=your-tenant.auth0.com
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# AUTH0_AUDIENCE=https://your-api.example.com

# Login.gov (Federal - FedRAMP)
# LOGIN_GOV_ISSUER=https://secure.login.gov
# LOGIN_GOV_CLIENT_ID=urn:gov:gsa:openidconnect.profiles:sp:sso:agency:app
# LOGIN_GOV_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----...
# LOGIN_GOV_ACR_VALUES=http://idmanagement.gov/ns/assurance/ial/2

# Azure AD (Enterprise)
# AZURE_AD_TENANT_ID=
# AZURE_AD_CLIENT_ID=
# AZURE_AD_CLIENT_SECRET=

# Session settings
# SESSION_EXPIRES_IN=86400

# =============================================================================
# DATABASE (Optional - falls back to in-memory if not configured)
# =============================================================================
# PostgreSQL connection settings
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ace_governance
# DB_USER=ace
# DB_PASSWORD=

# SSL mode: require, prefer, disable
# DB_SSL=prefer

# Connection pool size
# DB_POOL_MAX=10

# =============================================================================
# LOGGING
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
