  "permissions": {
    "allowed_domains": [],
    "allowed": [
      { "action": "read_bills", "description": "Read bill information" },
      { "action": "read_order_history", "description": "Review past orders" },
      { "action": "track_due_dates", "description": "Monitor deadlines" },
      { "action": "summarize_spending", "description": "Generate spending summaries" },
      { "action": "draft_grocery_cart", "description": "Prepare cart for review" },
      { "action": "navigate", "description": "Navigate to allowed sites" },
      { "action": "screenshot", "description": "Capture evidence" }
    ],
    "forbidden": [
      {
        "action": "access_primary_bank",
        "reason": "Assistant only uses designated household card - never primary bank",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "store_credentials",
        "reason": "No credential storage - separate identity model",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "create_new_accounts",
        "reason": "Cannot create accounts - human must set up",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "add_new_subscriptions",
        "reason": "No new recurring charges without explicit human setup",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "change_account_settings",
        "reason": "Cannot modify account security or profile settings",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "access_financial_accounts",
        "reason": "No access to investment, retirement, or savings accounts",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "transfer_money",
        "reason": "Cannot move money between accounts",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "apply_for_credit",
        "reason": "Cannot apply for any credit products",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "share_financial_data",
        "reason": "Cannot share data with third parties",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "send_money_externally",
        "reason": "Cannot send money via Venmo, Zelle, PayPal, etc.",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "gift_card_purchase",
        "reason": "Gift cards are a common scam vector - blocked by default",
        "enforcement": "HARD_BLOCK"
      },
      {
        "action": "wire_transfer",
        "reason": "Wire transfers are irreversible - never automated",
        "enforcement": "HARD_BLOCK"
      }
    ]
  },

  "constraints": {
    "timeout_per_step_ms": 30000,
    "max_retries_per_step": 2,
    "spending_limits": {
      "monthly_cap": "CONFIGURED_BY_USER",
      "per_transaction_cap": "CONFIGURED_BY_USER",
      "daily_cap": "CONFIGURED_BY_USER"
    },
    "merchant_restrictions": {
      "allowlist_mode": true,
      "requires_approval_for_new": true
    },
    "category_restrictions": {
      "groceries": { "enabled": true, "monthly_budget": "CONFIGURED_BY_USER" },
      "utilities": { "enabled": true, "auto_pay_eligible": false },
      "subscriptions": { "enabled": true, "new_subscriptions_blocked": true },
      "household_supplies": { "enabled": true, "monthly_budget": "CONFIGURED_BY_USER" }
    }
  },

  "escalation": {
    "triggers": [
      {
        "trigger_id": "ESC-HH-001",
        "name": "Price Increase",
        "condition": "item_price_increase > 10%",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Price increased more than 10% - please review"
      },
      {
        "trigger_id": "ESC-HH-002",
        "name": "Cart Over Budget",
        "condition": "cart_total > category_budget",
        "action": "STOP",
        "severity": "HIGH",
        "message": "Cart exceeds budget - approval required to proceed"
      },
      {
        "trigger_id": "ESC-HH-003",
        "name": "Item Substitution",
        "condition": "requested_item_unavailable",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Item unavailable - please approve substitution or remove"
      },
      {
        "trigger_id": "ESC-HH-004",
        "name": "Payment Failure",
        "condition": "payment_declined OR payment_error",
        "action": "STOP",
        "severity": "HIGH",
        "message": "Payment failed - human intervention required"
      },
      {
        "trigger_id": "ESC-HH-005",
        "name": "Login/MFA Request",
        "condition": "mfa_required OR captcha_required",
        "action": "STOP",
        "severity": "HIGH",
        "message": "Authentication required - human must complete"
      },
      {
        "trigger_id": "ESC-HH-006",
        "name": "New Merchant Detected",
        "condition": "merchant NOT IN allowlist",
        "action": "STOP",
        "severity": "HIGH",
        "message": "New merchant - requires explicit approval to add"
      },
      {
        "trigger_id": "ESC-HH-007",
        "name": "Unusual Amount",
        "condition": "transaction_amount > 150% of typical",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Amount higher than usual - please confirm"
      },
      {
        "trigger_id": "ESC-HH-008",
        "name": "Bill Amount Changed",
        "condition": "bill_amount != expected_amount",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Bill amount differs from expected - please review"
      },
      {
        "trigger_id": "ESC-HH-009",
        "name": "Subscription Renewal",
        "condition": "subscription_renewal_approaching",
        "action": "ASK",
        "severity": "LOW",
        "message": "Subscription renewing soon - confirm to continue"
      },
      {
        "trigger_id": "ESC-HH-010",
        "name": "Budget Threshold",
        "condition": "monthly_spend > 80% of budget",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Approaching monthly budget limit"
      },
      {
        "trigger_id": "ESC-HH-011",
        "name": "Unauthorized Access Attempt",
        "condition": "attempt_to_access_primary_bank OR credential_access_detected",
        "action": "STOP",
        "severity": "CRITICAL",
        "message": "CRITICAL: Unauthorized access attempt detected - execution halted immediately"
      },
      {
        "trigger_id": "ESC-HH-012",
        "name": "Potential Scam Pattern",
        "condition": "gift_card_request OR urgent_payment_demand OR unknown_recipient",
        "action": "STOP",
        "severity": "CRITICAL",
        "message": "CRITICAL: Potential scam detected - execution halted. Please verify independently."
      },
      {
        "trigger_id": "ESC-HH-013",
        "name": "Unusual Time",
        "condition": "transaction_time OUTSIDE normal_hours",
        "action": "ASK",
        "severity": "MEDIUM",
        "message": "Transaction requested outside your normal hours - please confirm"
      },
      {
        "trigger_id": "ESC-HH-014",
        "name": "Rapid Transactions",
        "condition": "transactions_in_last_hour > 3",
        "action": "STOP",
        "severity": "HIGH",
        "message": "Multiple rapid transactions detected - pausing for review"
      },
      {
        "trigger_id": "ESC-HH-015",
        "name": "First Time Item Category",
        "condition": "item_category NOT IN purchase_history",
        "action": "ASK",
        "severity": "LOW",
        "message": "New item category - please confirm this is intentional"
      }
    ]
  },

