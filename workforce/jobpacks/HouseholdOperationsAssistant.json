        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Read bill amounts, due dates, and payment history"
      },
      {
        "action": "read_order_history",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Review past orders and receipts"
      },
      {
        "action": "track_due_dates",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Monitor upcoming payment deadlines"
      },
      {
        "action": "reconcile_receipts",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Match receipts to transactions"
      },
      {
        "action": "summarize_spending",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Generate spending summaries by category"
      },
      {
        "action": "check_prices",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Monitor prices for regular purchases"
      },
      {
        "action": "read_subscription_status",
        "allowed": true,
        "mai_level": "INFORMATIONAL",
        "requires_human_approval": false,
        "description": "Check active subscriptions and renewal dates"
      }
    ],

    "advisory_actions": [
      {
        "action": "draft_grocery_cart",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": true,
        "description": "Prepare grocery cart based on patterns and needs - human reviews before checkout"
      },
      {
        "action": "suggest_payment_schedule",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": true,
        "description": "Recommend optimal payment timing based on due dates and cash flow"
      },
      {
        "action": "recommend_subscription_changes",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": true,
        "description": "Suggest subscriptions to cancel or modify"
      },
      {
        "action": "flag_price_changes",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": false,
        "description": "Alert when regular items have price increases"
      },
      {
        "action": "suggest_item_substitution",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": true,
        "description": "Recommend alternatives when items unavailable or expensive"
      },
      {
        "action": "prepare_bill_payment",
        "allowed": true,
        "mai_level": "ADVISORY",
        "requires_human_approval": true,
        "description": "Set up payment for review - not executed until approved"
      }
    ],

    "mandatory_actions": [
      {
        "action": "charge_card",
        "allowed": true,
        "mai_level": "MANDATORY",
        "requires_human_approval": true,
        "description": "Any transaction that charges money - ALWAYS requires human approval"
      },
      {
        "action": "place_order",
        "allowed": true,
        "mai_level": "MANDATORY",
        "requires_human_approval": true,
        "description": "Submit any order - ALWAYS requires human approval"
      },
      {
        "action": "change_quantities",
        "allowed": true,
        "mai_level": "MANDATORY",
        "requires_human_approval": true,
        "description": "Modify order quantities - requires approval"
      },
      {
        "action": "add_new_merchant",
