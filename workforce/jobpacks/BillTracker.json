  "notifications": {
    "due_date_reminders": {
      "7_days": { "channel": "email", "urgency": "LOW" },
      "3_days": { "channel": "push", "urgency": "MEDIUM" },
      "1_day": { "channel": "push_and_sms", "urgency": "HIGH" },
      "due_today": { "channel": "all", "urgency": "CRITICAL" }
    },
    "variance_alerts": {
      "minor": { "channel": "email", "immediate": false },
