        "description": "Check current bill statement"
      },
      {
        "step_id": "bill-002",
        "action": "compare_amounts",
        "mai_level": "INFORMATIONAL",
        "description": "Compare to expected amount"
      },
      {
        "step_id": "bill-003",
        "action": "flag_amount_variance",
        "mai_level": "ADVISORY",
        "description": "Alert if amount differs significantly"
      },
      {
        "step_id": "bill-004",
        "action": "prepare_payment",
        "mai_level": "ADVISORY",
        "description": "Set up payment for review"
      },
      {
        "step_id": "bill-005",
        "action": "pay_bill",
        "mai_level": "MANDATORY",
        "description": "Execute payment with approval"
      },
      {
        "step_id": "bill-006",
        "action": "read_payment_history",
