# =============================================================================
# ACE Governance Platform - Environment Configuration
# =============================================================================
#
# Copy this file to .env and configure for your environment
#
# SECURITY: Never commit .env files to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
# Options: development, staging, production

# Compliance level (controls security strictness)
COMPLIANCE_LEVEL=development
# Options: development, staging, production, fedramp

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3001

# Logging level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARN, ERROR

# -----------------------------------------------------------------------------
# Security - JWT
# -----------------------------------------------------------------------------
# CRITICAL: Change these in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=CHANGE_ME_IN_PRODUCTION_use_at_least_64_random_characters_here
JWT_ISSUER=ace-governance
JWT_AUDIENCE=ace-platform

# Token expiration in seconds (default: 1 hour)
JWT_EXPIRY=3600

# -----------------------------------------------------------------------------
# Security - CORS
# -----------------------------------------------------------------------------
# Frontend URL (where your React app runs)
CORS_ORIGIN=http://localhost:5173

# For multiple origins (comma-separated):
# CORS_ORIGIN=https://app.example.com,https://admin.example.com

# -----------------------------------------------------------------------------
# Audit & Compliance
# -----------------------------------------------------------------------------
# Where to store audit logs
AUDIT_STORE_PATH=./audit_logs

# Policy version (include in every audit entry)
POLICY_VERSION=2024.1.0

# Maximum audit file size before rotation (MB)
AUDIT_MAX_FILE_MB=100

# Maximum audit file age before rotation (days)
AUDIT_MAX_AGE_DAYS=1

# -----------------------------------------------------------------------------
# Key Management
# -----------------------------------------------------------------------------
# Provider: local, aws_kms, vault
KEY_PROVIDER=local

# For AWS KMS (when KEY_PROVIDER=aws_kms):
# AWS_REGION=us-east-1
# KMS_JWT_KEY_ARN=arn:aws:kms:us-east-1:...
# KMS_AUDIT_KEY_ARN=arn:aws:kms:us-east-1:...

# For HashiCorp Vault (when KEY_PROVIDER=vault):
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=s.xxxxxxxxxx
# VAULT_MOUNT_PATH=secret

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Bypass key for development (leave empty in production)
RATE_LIMIT_BYPASS_KEY=

# -----------------------------------------------------------------------------
# External Services (Phase 2)
# -----------------------------------------------------------------------------
# Redis (for distributed rate limiting)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# PostgreSQL (for structured data)
# DATABASE_URL=postgresql://user:pass@localhost:5432/ace_governance

# -----------------------------------------------------------------------------
# Anthropic API (for AI proxy)
# -----------------------------------------------------------------------------
# Your Anthropic API key (clients never see this)
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# Sentry for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Datadog for APM
# DD_API_KEY=xxx
